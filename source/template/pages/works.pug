extends ../_main-template

block title
  - var title = 'works'

block content
    include ../sections/hero
    
    section.section.works-head
        svg(viewbox="0 0 1000 100" preserveAspectRatio="none").triangles.works__triangles.triangles_left
            polygon(points="0,0 0,100 1000,100")
        svg(viewbox="0 0 1000 100" preserveAspectRatio="none").triangles.works__triangles.triangles_right
            polygon(points="0,100 1000,100 1000,0")                
        +title('Мои работы', 'works-header.png', 'work-head__title')
    
    section.section.slider
            .slider__desc
                .slider__desc-title
                    +title('Сайт школы онлайн образования', '', 'subtitle')  
                .slider__desc-skills
                    | HTML, css, javascript
                .slider__desc-btn
                    a(href="#").btn Посмотреть сайт
                        svg.slider-desc-btn__img
                            use(xlink:href=`./assets/img/sprite/sprite.svg#link`)
       
            .slider__display
                img(src="assets/img/content/1.png" alt="").slider__display-pic
            .slider__btns
                .slider-btns__down
                    img(src="assets/img/btns/down.jpg", alt="").slider-btns__img
                    .slider-btns__layer
                    svg.slider-btns__arrow-down
                        use(xlink:href=`./assets/img/sprite/sprite.svg#arrow_down`)
                .slider-btns__up
                    img(src="assets/img/btns/up.jpg", alt="").slider-btns__img
                    .slider-btns__layer
                    svg.slider-btns__arrow-up
                        use(xlink:href=`./assets/img/sprite/sprite.svg#arrow_down`)
                    
                    
    include ../sections/reviews
    include ../sections/footer