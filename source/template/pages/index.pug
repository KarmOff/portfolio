extends ../_welcome-template

block title
  - var title = 'Main page'

block content
    section.section.welcome
            .form.form__welcom
                .form__user-block
                    .form__photo
                        img(src="assets/img/content/user.jpg", alt="")
                    .form__name
                        | Артур Кармов
                    .form__desc Личный сайт веб-разработчика

                ul.socials.socials_welcome-position
                    each item in ['vk','gh','in']
                        li.socials__item.socials__item_margin
                            a(href="" class=`social__link social__link_${item}`)
                                svg.socials__icon.socials__icon_fill-green
                                    use(xlink:href=`./assets/img/sprite/sprite.svg#${item}`)
                ul.form__nav-menu
                    li.nav-menu__items
                        a(href="#") Мои работы
                    li.nav-menu__items
                        a(href="#") Обо мне
                    li.nav-menu__items
                        a(href="#") Блог   
            
            .form.form__login
                .lgoin__title
                    +title('Авторизуйтесь', '', 'subtitle')  
                form.form__auth
                    input(type="text", name="login", placeholder='Логин').login__name
                    input(type="password", name="password", placeholder='Пароль').login__password

            
            
            a(href="#").login.welcome__login Авторизоваться

block footer
    include ../sections/footer_welcome